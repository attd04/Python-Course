print("Welcome to Treasure Island.")
print("Your mission is to find the treasure.") 

direct = input("do you want to go left or right? ")
if direct == "left":
  
  act = input("swim or wait? ")
  if act == "wait":
    
    door = input("Which door? red, yellow, or blue? ")
    if door == "yellow":
      print("You found the treasure! You won!!")
    elif door == "blue":
      print("You were attacked by a drunk. Game over.")
    else:
      print("You froze. Game over.")
    
  else:
    print("You got eaten by a bear. Game over.")
    
else:
  print("You died. Game over.")
  


